{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
